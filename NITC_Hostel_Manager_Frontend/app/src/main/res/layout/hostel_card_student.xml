<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="7dp"
    android:layout_marginHorizontal="3dp"
    android:layout_marginBottom="2dp"
    android:background="@color/dark_mint_cream"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/hostelNameInHostelCardStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MHB 2"
        android:fontFamily="@font/inter_semibold"
        android:textSize="18sp"
        android:textColor="@color/black"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/inmatesTypeTVInHostelCardStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Inmates Type: "
        android:fontFamily="@font/inter"
        android:textSize="15.5sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/hostelNameInHostelCardStudent"
        app:layout_constraintTop_toBottomOf="@+id/hostelNameInHostelCardStudent"/>

    <TextView
        android:id="@+id/inmatesTypeInHostelCardStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Male"
        android:fontFamily="@font/inter"
        android:textSize="15.5sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/inmatesTypeTVInHostelCardStudent"
        app:layout_constraintBottom_toBottomOf="@+id/inmatesTypeTVInHostelCardStudent"
        app:layout_constraintStart_toEndOf="@+id/inmatesTypeTVInHostelCardStudent"/>

    <TextView
        android:id="@+id/chargesTVInHostelCardStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hostel Charges: "
        android:fontFamily="@font/inter"
        android:textSize="15.5sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/hostelNameInHostelCardStudent"
        app:layout_constraintTop_toBottomOf="@+id/inmatesTypeTVInHostelCardStudent"/>

    <TextView
        android:id="@+id/chargesInHostelCardStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1500"
        android:fontFamily="@font/inter"
        android:textSize="15.5sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/chargesTVInHostelCardStudent"
        app:layout_constraintBottom_toBottomOf="@+id/chargesTVInHostelCardStudent"
        app:layout_constraintStart_toEndOf="@+id/chargesTVInHostelCardStudent"/>

    <TextView
        android:id="@+id/capacityTVInHostelCardStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capacity: "
        android:fontFamily="@font/inter"
        android:textSize="15.5sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/hostelNameInHostelCardStudent"
        app:layout_constraintTop_toBottomOf="@+id/chargesTVInHostelCardStudent"/>

    <TextView
        android:id="@+id/capacityInHostelCardStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="450"
        android:fontFamily="@font/inter"
        android:textSize="15.5sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/capacityTVInHostelCardStudent"
        app:layout_constraintBottom_toBottomOf="@+id/capacityTVInHostelCardStudent"
        app:layout_constraintStart_toEndOf="@+id/capacityTVInHostelCardStudent"/>

    <TextView
        android:id="@+id/wardenEmailTVInHostelCardStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Warden Email: "
        android:fontFamily="@font/inter"
        android:textSize="15.5sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/hostelNameInHostelCardStudent"
        app:layout_constraintTop_toBottomOf="@+id/capacityTVInHostelCardStudent"/>

    <TextView
        android:id="@+id/wardenEmailInHostelCardStudent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="kaushik@gmail.com"
        android:fontFamily="@font/inter"
        android:textSize="15.5sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@+id/wardenEmailTVInHostelCardStudent"
        app:layout_constraintBottom_toBottomOf="@+id/wardenEmailTVInHostelCardStudent"
        app:layout_constraintStart_toEndOf="@+id/wardenEmailTVInHostelCardStudent"/>

</androidx.constraintlayout.widget.ConstraintLayout>