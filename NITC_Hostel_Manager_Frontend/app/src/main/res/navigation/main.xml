<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.kumar.nitchostelmanager.authentication.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_adminDashboardFragment"
            app:destination="@id/adminDashboardFragment" />
        <action
            android:id="@+id/action_loginFragment_to_studentDashboardFragment"
            app:destination="@id/studentDashboardFragment" />
        <action
            android:id="@+id/action_loginFragment_to_wardenDashboardFragment"
            app:destination="@id/wardenDashboardFragment" />
    </fragment>
    <fragment
        android:id="@+id/adminDashboardFragment"
        android:name="com.kumar.nitchostelmanager.admin.fragments.AdminDashboardFragment"
        android:label="AdminDashboardFragment" />
    <fragment
        android:id="@+id/studentDashboardFragment"
        android:name="com.kumar.nitchostelmanager.student.fragments.StudentDashboardFragment"
        android:label="StudentDashboardFragment" />
    <fragment
        android:id="@+id/wardenDashboardFragment"
        android:name="com.kumar.nitchostelmanager.warden.fragments.WardenDashboardFragment"
        android:label="WardenDashboardFragment" />
</navigation>